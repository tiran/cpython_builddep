# source file

PYBUILDDEP_SRCDIR=/cpython
export PYBUILDDEP_DISTROTAG

# Include ccache
for ccache_dir in /usr/lib/ccache /usr/lib/ccache/bin /usr/lib64/ccache; do
    if test -d $ccache_dir; then
        PATH="${ccache_dir}:${PATH}"
        break
    fi
done
export PATH
echo "PATH=${PATH}"

# export ccache dir
CCACHE_DIR="${PYBUILDDEP_SRCDIR}/builddep/.ccache"
mkdir -p "${CCACHE_DIR}"
export CCACHE_DIR

# use all CPU cores
MAKEFLAGS="-j$(nproc)"
export MAKEFLAGS
echo "MAKEFLAGS=${MAKEFLAGS}"
